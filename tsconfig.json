{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // =================================================================
    "baseUrl": "./src",
    "paths": {
      "@layouts/*": ["/src/layouts/*"],
      "@pages/*": ["/src/pages/*"],
      "@utils/*" : ["/src/utils/*"],
      "@assets/*" : ["/src/assets/*"],
      "@routes/*" : ["/src/routes/*"],
      "@hooks/*" : ["/src/hooks/*"],
      "@context/*" : ["/src/context/*"],
      "@api/*" : ["/src/api/*"],
      "@helpers/*" : ["/src/helpers/*"],
      "@locales/*" : ["/src/locales/*"],
      "@models/*" : ["/src/models/*"],
      "@env/*" : ["/src/env/*"],
      "@src/*" : ["/src/*"],
    },
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
